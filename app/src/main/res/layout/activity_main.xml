<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_garage_door">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:title="BleRemoteControl"
        android:theme="@style/ThemeOverlay.Material3.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tvStatus"
            android:textSize="18sp"
            android:text="Status: Idle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvSecretHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bitte HMAC-Secret per QR scannen."
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:background="#CCF44336"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnScanKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR-Code scannen"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Arming buttons remain visible -->
        <Button
            android:id="@+id/btnOpen"
            android:text="Open"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableLeft="@drawable/ic_open"/>

        <Button
            android:id="@+id/btnClose"
            android:text="Close"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_close" />

        <!-- Execute button is always visible, but usually disabled -->
        <Button
            android:id="@+id/btnExecute"
            android:text="Execute"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnRescan"
            android:text="Rescan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />
    </LinearLayout>

</RelativeLayout>
